{
  "name": "@findlazy/findlazy",
  "version": "0.1.0",
  "exports": {
    ".": "./main.ts",
    "./cli": "./src/interface/cli/index.ts",
    "./mcp": "./src/interface/mcp/server.ts",
    "./core": "./src/core/mod.ts",
    "./parsers": "./src/parsers/mod.ts",
    "./scanners": "./src/scanners/mod.ts"
  },
  "publish": {
    "include": [
      "main.ts",
      "src/**/*.ts",
      "patterns/**/*.json",
      "findlazy.schema.json",
      "README.md",
      "LICENSE"
    ],
    "exclude": [
      "**/*.test.ts",
      "tests/**/*",
      ".github/**/*",
      ".vscode/**/*",
      ".claude/**/*",
      "dist/**/*",
      "npm/**/*",
      "scripts/**/*"
    ]
  },
  "tasks": {
    "dev": "deno run --allow-read --allow-write --allow-env main.ts",
    "start": "deno run --allow-read --allow-write --allow-env main.ts",
    "test": "deno test --allow-read --allow-write --allow-env",
    "test:watch": "deno test --allow-read --allow-write --allow-env --watch",
    "check": "deno check main.ts",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "fmt:check": "deno fmt --check",
    "compile": "deno compile --lite --allow-read --allow-write --allow-env -o ./dist/findlazy main.ts",
    "compile:mcp": "deno compile --lite --allow-read --allow-write --allow-env -o ./dist/findlazy-mcp src/interface/mcp/server.ts",
    "build:binaries": "deno run -A scripts/build-binaries.ts",
    "build:npm": "deno run -A --config=resources/dnt/deno.jsonc scripts/build_npm.ts",
    "package:binaries": "deno run -A scripts/package-binaries.ts",
    "publish:jsr": "deno publish --allow-slow-types",
    "publish:jsr:dry-run": "deno publish --dry-run --allow-slow-types"
  },
  "imports": {
    "@cliffy/command": "jsr:@cliffy/command@^1.0.0-rc.7",
    "@cliffy/table": "jsr:@cliffy/table@^1.0.0-rc.7",
    "@cliffy/prompt": "jsr:@cliffy/prompt@^1.0.0-rc.7",
    "@std/fs": "jsr:@std/fs@^1.0.8",
    "@std/path": "jsr:@std/path@^1.0.8",
    "@std/jsonc": "jsr:@std/jsonc@^1.0.1",
    "@std/yaml": "jsr:@std/yaml@^1.0.5",
    "@std/fmt/colors": "jsr:@std/fmt@^1.0.3/colors",
    "@std/assert": "jsr:@std/assert@^1.0.10",
    "@std/testing": "jsr:@std/testing@^1.0.5",
    "@modelcontextprotocol/sdk": "npm:@modelcontextprotocol/sdk@^1.0.4",
    "typescript": "npm:typescript@^5.7.2",
    "@kriss-u/py-ast": "jsr:@kriss-u/py-ast@^1.0.0"
  },
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "exactOptionalPropertyTypes": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "lib": ["deno.window", "deno.unstable"]
  },
  "lint": {
    "rules": {
      "include": [
        "ban-untagged-todo",
        "camelcase",
        "eqeqeq",
        "explicit-function-return-type",
        "no-unused-vars",
        "no-console"
      ]
    },
    "exclude": [
      "dist/",
      "tests/fixtures/",
      "**/*.test.ts"
    ]
  },
  "fmt": {
    "useTabs": false,
    "indentWidth": 2,
    "lineWidth": 100,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve",
    "exclude": [
      "dist/",
      "tests/fixtures/"
    ]
  },
  "test": {
    "include": ["**/*.test.ts", "tests/**/*.ts"],
    "exclude": ["dist/", "tests/fixtures/"]
  },
  "exclude": [
    "dist/",
    "node_modules/",
    ".git/"
  ]
}
