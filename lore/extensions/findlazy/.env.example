# FindLazy Environment Variables

# Log level (debug, info, warn, error)
LOG_LEVEL=info

# Enable debug mode
DEBUG=false

# Cache directory (optional, defaults to ~/.findlazy/cache)
CACHE_DIR=~/.findlazy/cache

# Global config file path (optional, defaults to ~/.findlazy/config.json)
# Project-specific config can be ./findlazy.json in the scanned project
CONFIG_PATH=~/.findlazy/config.json

# MCP Server Configuration
MCP_SERVER_NAME=findlazy
MCP_SERVER_VERSION=0.1.0

# Performance settings
MAX_FILE_SIZE_MB=10
MAX_CONCURRENT_FILES=50
